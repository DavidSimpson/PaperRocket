<div class="login-container">
	<div class="login-top clear">
		<div class="logo logo-center"></div>
		<h2 class="logo-title">PaperRocket</h2>
		<h3 class="login-title">Login</p>
	</div>
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: {class: "login-form"}) do |f| %>
		<%= f.input :email %>
		<%= f.input :password %>
		
		<% if devise_mapping.rememberable? -%>
			<%= f.input :remember_me, as: :boolean %>
		<% end -%>
		
		<%= f.button :submit %>
	<% end %>
	
	<%= render "devise/shared/links" %>
</div>